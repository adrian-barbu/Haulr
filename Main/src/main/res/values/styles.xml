<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="haulrDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#FFC107</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">#4CAF50</item>
    </style>

    <!-- Login Activity -->
    <style name="label_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:clickable">true</item>
        <item name="typeface">haulrDemi</item>
    </style>

    <style name="label_vision" parent="label_button">
        <item name="android:textColor">@color/label_vision</item>
        <item name="android:textSize">27sp</item>
        <item name="typeface">haulrLight</item>
    </style>

    <style name="facebook_login_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/login_bg</item>
        <item name="android:textSize">19dp</item>
        <item name="android:background">@drawable/facebook_login_button_selector</item>
        <!-- <item name="android:drawableLeft">@drawable/facebook_login_logo</item> -->
        <item name="android:text">@string/login_with_facebook</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="login_input_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/login_info_text</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/login_input_control_bg</item>
        <item name="android:textColorHint">@color/login_info_text</item>
    </style>

    <style name="login_info_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/login_info_text</item>
        <item name="android:textSize">15dp</item>
        <item name="typeface">haulrRegular</item>
    </style>

    <style name="login_resend_label" parent="login_info_label">
        <item name="android:textColor">@color/login_resend_text</item>
        <item name="android:textSize">15dp</item>
        <item name="typeface">haulrMedium</item>
    </style>

    <!-- Header View -->

    <style name="image_back_button">
        <item name="android:layout_width">@dimen/setting_icon_size</item>
        <item name="android:layout_height">@dimen/setting_icon_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_left</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="header_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:background">@color/common_bg</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="login_header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/header_text</item>
        <item name="android:textSize">18dp</item>
        <item name="typeface">haulrLight</item>
    </style>

    <style name="login_header_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="typeface">haulrMedium</item>
    </style>

    <!-- Common Two Columned Layout Items -->
    <!-- (Maybe use it settings, set haul info activities) -->
    <style name="two_column_left_panels">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="two_column_right_panels">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">6</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Main Activities -->

    <style name="common_action_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">13dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/common_button_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/login_bg</item>
        <item name="android:textSize">21dp</item>
        <item name="typeface">haulrRegular</item>
    </style>

    <!-- Common Item Layout -->

    <style name="info_item_layout">    <!-- Top Layout -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/item_layout_selector</item>
    </style>

    <style name="info_item_left">    <!-- Left Icon -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_picker</item>
    </style>

    <style name="info_item_right">    <!-- Right Icon -->
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/ic_right</item>
    </style>

    <style name="info_sub_layout">    <!-- Sub Layout (maybe vertical orientation) -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="info_small">   <!-- Small Info -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/info_small</item>
        <item name="android:textSize">16sp</item>
        <item name="typeface">haulrLight</item>
    </style>

    <style name="info_large" parent="info_small">   <!-- Large Info -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/info_large</item>
        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="typeface">haulrRegular</item>
    </style>

    <!-- Place Search Activity -->
    <style name="place_search_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@android:color/white</item>
        <item name="android:background">@drawable/place_search_frame</item>
        <item name="android:textColorHint">#77ffffff</item>
    </style>

    <style name="search_item_address" parent="info_small">   <!-- Large Info -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/info_large</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="typeface">haulrRegular</item>
    </style>

    <style name="search_item_layout" parent="setting_common_item">
    </style>

    <style name="current_location" parent="search_item_address">   <!-- Large Info -->
        <item name="android:textColor">@color/info_large</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="typeface">haulrMedium</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <!-- Settings Activity -->

    <style name="setting_header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="typeface">haulrMedium</item>
    </style>

    <style name="setting_part_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/login_input_control_bg</item>
    </style>

    <style name="setting_common_item">      <!-- Common Item -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/setting_item_selector</item>
    </style>

    <style name="setting_item_icon">    <!-- Left Icon -->
        <item name="android:layout_width">@dimen/setting_icon_size</item>
        <item name="android:layout_height">@dimen/setting_icon_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="setting_part_item_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">@color/login_info_text</item>
        <item name="android:textSize">17dp</item>
        <item name="typeface">haulrRegular</item>
    </style>

    <style name="setting_part_item_right_image">
        <item name="android:layout_width">@dimen/setting_small_icon_size</item>
        <item name="android:layout_height">@dimen/setting_small_icon_size</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="setting_part_item_separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/setting_item_separator</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="setting_profile_editbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/login_info_text</item>
        <item name="android:textColorHint">@color/login_info_text</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="setting_logout" parent="setting_part_item_label">  <!-- Log Out -->
        <item name="android:textColor">@color/logout</item>
    </style>

    <style name="credit_card_item" parent="setting_profile_editbox">
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="setting_mover_large" parent="info_large">   <!-- Large Info -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/info_large</item>
        <item name="android:textSize">18sp</item>
        <item name="typeface">haulrRegular</item>
    </style>

    <!-- Haul Info -->

    <style name="haul_info_header_price">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24dp</item>
        <item name="typeface">haulrMedium</item>
    </style>

    <style name="haul_info_separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/setting_item_separator</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="haul_info_item_layout">      <!-- Common Item -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/feature_item_selector</item>
    </style>

    <style name="haul_info_item_icon">    <!-- Left Icon -->
        <item name="android:layout_width">@dimen/normal_icon_size</item>
        <item name="android:layout_height">@dimen/normal_icon_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="haul_info_sub_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Pay Haul -->
    <style name="pay_haul_cancel_button" parent="label_button">
        <item name="android:textColor">@color/pay_haul_cancel_button</item>
    </style>

    <style name="pay_haul_header" parent="setting_header_text">
        <item name="android:textColor">@color/pay_haul_header</item>
        <item name="typeface">haulrMedium</item>
    </style>

    <style name="pay_haul_header_icon" parent="setting_part_item_right_image">
        <item name="android:layout_width">@dimen/setting_icon_size</item>
        <item name="android:layout_height">@dimen/setting_icon_size</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">false</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="pay_haul_separator" parent="haul_info_separator">
        <item name="android:background">@color/pay_haul_separator</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="pay_haul_small_item" parent="info_small">   <!-- Small Info -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/pay_haul_small</item>
        <item name="android:textSize">16sp</item>
        <item name="typeface">haulrMedium</item>
    </style>

    <style name="pay_haul_normal_item" parent="pay_haul_small_item">   <!-- Normal Info -->
        <item name="android:textColor">@color/pay_haul_normal</item>
    </style>

    <style name="pay_haul_price" parent="haul_info_header_price">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="pay_haul_action" parent="haul_info_header_price">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="typeface">haulrDemi</item>
    </style>

    <!-- Complete Haul Activity -->

    <style name="complete_haul_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/info_large</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="typeface">haulrRegular</item>
    </style>

    <style name="complete_haul_title" parent="complete_haul_common">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="complete_haul_price" parent="haul_info_header_price">
        <item name="android:textSize">70sp</item>
    </style>


    <!-- Driver -->

    <!-- Main Activity -->
    <style name="d_common_yellow_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">21dp</item>
        <item name="typeface">haulrRegular</item>
    </style>

    <!-- Driver Status -->
    <style name="d_change_status_layout" parent="setting_part_layout" />
    <style name="d_change_status_item" parent="setting_common_item" />
    <style name="d_change_status_item_big_label" parent="setting_part_item_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">@color/d_status_big_item_color</item>
    </style>

    <style name="d_change_status_item_small_label" parent="setting_part_item_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">13dp</item>
        <item name="typeface">haulrDemi</item>
    </style>

    <!-- View Haul -->
    <style name="view_haul_info_small" parent="info_small">   <!-- Small Info -->
        <item name="android:textSize">14sp</item>
    </style>


    <!-- Pending Haul Activity -->
    <style name="pending_haul_info_layout" parent="setting_part_layout">
    </style>

    <style name="pending_haul_item" parent="setting_common_item">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <!-- Monitoring Haul Activity -->

    <style name="monitoring_haul_status_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="typeface">haulrRegular</item>
    </style>

    <style name="monitoring_haul_status_highlight_item" parent="monitoring_haul_status_item">
        <item name="android:textSize">23sp</item>
        <item name="typeface">haulrMedium</item>
    </style>

    <style name="monitoring_haul_op_button" parent="monitoring_haul_status_item">
        <item name="android:background">@drawable/setting_item_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Ticket Activity -->
    <style name="ticket_duration">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">@color/login_info_text</item>
        <item name="android:textSize">23dp</item>
        <item name="typeface">haulrDemi</item>
    </style>
</resources>