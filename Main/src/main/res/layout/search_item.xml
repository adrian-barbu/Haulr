<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/predictedRow"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!-- Picker Icon -->

    <LinearLayout
        style="@style/two_column_left_panels"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_search_result" />
    </LinearLayout>

    <LinearLayout
        style="@style/two_column_right_panels"
        android:layout_gravity="center_vertical"
        android:gravity="center">

        <com.haulr.control.font.HaulrTextView
            android:id="@+id/address"
            style="@style/search_item_address"
            android:gravity="center_vertical" />

        <!-- separator -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/place_item_separator" />
    </LinearLayout>

</LinearLayout>